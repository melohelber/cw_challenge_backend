# ============================================
# CloudWalk Agent Swarm - Environment Variables
# ============================================

# CRITICAL: Copy this to .env and fill in real values
# NEVER commit .env to git!

# -------------------- Required --------------------

# Anthropic API Key (get from: https://console.anthropic.com/)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Anthropic Model (Claude 4 - 2026)
# Options: claude-haiku-4-5-20251001 (fastest), claude-sonnet-4-5-20250929 (balanced), claude-opus-4-6 (smartest)
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# Tavily API Key (get from: https://tavily.com/)
TAVILY_API_KEY=tvly-your-key-here

# Tavily Search Depth (basic or advanced)
TAVILY_SEARCH_DEPTH=advanced

# JWT Secret (generate: openssl rand -hex 32)
SECRET_KEY=your-secret-key-min-32-chars-here

# -------------------- Optional --------------------

# Application
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# Database
DATABASE_URL=sqlite:///./data/app.db

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# JWT
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# Agent Configuration
AGENT_TIMEOUT_SECONDS=30
CACHE_TTL_HOURS=1

# Session Management
SESSION_TIMEOUT_MINUTES=5
SESSION_CLEANUP_INTERVAL_MINUTES=30
CONVERSATION_HISTORY_PAIRS=5

# Telegram Bot (Optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-from-botfather
BOT_USERNAME=telegram_bot
BOT_PASSWORD=your-bot-password-here
BOT_SESSION_TIMEOUT_MINUTES=10
BACKEND_URL=http://localhost:8000

# WhatsApp Bot via UAZAPI (Optional)
# Get credentials from: https://uazapi.dev
UAZAPI_BASE_URL=
UAZAPI_API_TOKEN=your-uazapi-admin-token
UAZAPI_INSTANCE_ID=your-uazapi-instance-id
UAZAPI_WEBHOOK_TOKEN=optional-webhook-verification-token
WHATSAPP_BOT_USERNAME=whatsapp_bot
WHATSAPP_BOT_PASSWORD=whatsapp_bot
WHATSAPP_SESSION_TIMEOUT_MINUTES=10
WHATSAPP_WEBHOOK_PORT=5001
