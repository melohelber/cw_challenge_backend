{
	"info": {
		"_postman_id": "cloudwalk-agent-swarm",
		"name": "CloudWalk Agent Swarm API",
		"description": "Collection para testar a API do CloudWalk Agent Swarm com JWT automático",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{jwt_token}}",
				"type": "string"
			}
		]
	},
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"const loginUrl = pm.environment.get('base_url') + '/auth/login';",
					"const username = pm.environment.get('test_username') || 'test';",
					"const password = pm.environment.get('test_password') || 'test123';",
					"",
					"if (!pm.globals.get('jwt_token') || !pm.globals.get('token_expiry') || Date.now() > pm.globals.get('token_expiry')) {",
					"    pm.sendRequest({",
					"        url: loginUrl,",
					"        method: 'POST',",
					"        header: {",
					"            'Content-Type': 'application/json'",
					"        },",
					"        body: {",
					"            mode: 'raw',",
					"            raw: JSON.stringify({",
					"                username: username,",
					"                password: password",
					"            })",
					"        }",
					"    }, function (err, response) {",
					"        if (err) {",
					"            console.error('Failed to get JWT token:', err);",
					"        } else {",
					"            const jsonData = response.json();",
					"            pm.globals.set('jwt_token', jsonData.access_token);",
					"            pm.globals.set('token_expiry', Date.now() + (25 * 60 * 1000));",
					"            console.log('JWT token refreshed successfully');",
					"        }",
					"    });",
					"}"
				]
			}
		}
	],
